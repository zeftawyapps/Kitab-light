<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ws.wolfsoft.e_books.BookDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    android:src="@drawable/the_dreaming"
    android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"


                android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/white"
                android:src="@drawable/ic_back"/>

            </LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_share"
                android:layout_gravity="right"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20.7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="146dp"
                android:src="@drawable/the_dreaming"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.3dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_dreaming_reality"
                    android:textSize="18.3sp"
                    android:textColor="@color/white"/>

                <customfonts.MyTextView_Roboto_Light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13.3sp"
                    android:layout_marginTop="8dp"
                    android:text="Noor Anand"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:cardElevation="0.5dp"
            app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="9.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages"
                    android:textSize="11.7sp"
                    android:textColor="#a0a7b0"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:text="210"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="9.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapters"
                    android:textSize="11.7sp"
                    android:textColor="#a0a7b0"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:text="9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="9.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Views"
                    android:textSize="11.7sp"
                    android:textColor="#a0a7b0"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:text="10,000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="9.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:textSize="11.7sp"
                    android:textColor="#a0a7b0"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:text="Yes"/>
            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:elevation="0.5dp"
            android:layout_marginTop="13.3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <customfonts.TextViewGiorgia
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textAllCaps="true"
                    android:textColor="@color/green"
                    android:layout_marginTop="11.7sp"
                    android:textSize="11.7sp"/>


                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the"
                    android:textSize="13.3sp"
                    android:textColor="#7a7f85"/>


                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="13.3sp"
                    android:layout_marginTop="5dp"
                    android:text="Read More"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:elevation="0.5dp"
            android:layout_marginTop="13.3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="13dp"
                android:orientation="vertical">

                <customfonts.TextViewGiorgia
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textAllCaps="true"
                    android:textColor="@color/green"
                    android:layout_marginTop="11.7sp"
                    android:textSize="11.7sp"/>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="11.7dp"
                  android:orientation="horizontal">

                  <customfonts.MyTextView_Roboto_Regular
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Fantasy"
                      android:textSize="13.3sp"
                      android:textColor="#7a7f85"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:paddingTop="7.3dp"
                      android:paddingBottom="7.3dp"
                      android:background="@drawable/light_border_gray_rect"/>

                  <customfonts.MyTextView_Roboto_Regular
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Young Adult"
                      android:layout_marginLeft="11.7dp"
                      android:textSize="13.3sp"
                      android:textColor="#7a7f85"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:paddingTop="7.3dp"
                      android:paddingBottom="7.3dp"
                      android:background="@drawable/light_border_gray_rect"/>

              </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#424242">

        <customfonts.MyTextView_Roboto_Regular
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Free to Read"
            android:textSize="18.3sp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>


        <customfonts.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Add to library"
            android:background="@drawable/orange_rect"
            android:paddingLeft="28.8dp"
            android:paddingRight="28.8dp"
            android:paddingTop="13.5dp"
            android:layout_margin="7.3dp"
            android:textAllCaps="true"
            android:paddingBottom="13.5dp"/>
    </LinearLayout>

</RelativeLayout>
